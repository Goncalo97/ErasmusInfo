<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CollegeEditActivity"
    tools:showIn="@layout/activity_college_edit">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCollegeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/side_margin"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginRight="@dimen/side_margin"
                    android:layout_marginBottom="@dimen/bottom_margin"
                    android:ems="10"
                    android:hint="@string/college_edit_textInputEditText_hint_name"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCollegeCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/side_margin"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginRight="@dimen/side_margin"
                    android:layout_marginBottom="@dimen/bottom_margin"
                    android:ems="10"
                    android:hint="@string/college_edit_textInputEditText_hint_country"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCollegeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/side_margin"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginRight="@dimen/side_margin"
                    android:layout_marginBottom="@dimen/bottom_margin"
                    android:ems="10"
                    android:hint="@string/college_edit_textInputEditText_hint_location"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonCollegeSave"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:onClick="collegeSave"
                android:text="@string/college_edit_button_save"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

            <Button
                android:id="@+id/buttonCollegeCancel"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:onClick="collegeCancel"
                android:text="@string/college_edit_button_cancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

