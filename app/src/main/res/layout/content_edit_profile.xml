<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileEdit"
    tools:showIn="@layout/activity_edit_profile">


    <EditText
        android:id="@+id/editTextViewProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name_profile"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextViewProfileAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/age_profile"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSaveProfile"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:onClick="saveProfile"
        android:text="@string/save"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonCancelProfile"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:onClick="cancelProfile"
        android:text="@string/cancel" />


</LinearLayout>