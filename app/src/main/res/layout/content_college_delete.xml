<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CollegeDelete"
    tools:showIn="@layout/activity_college_delete">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCollegeHintName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:ems="10"
                android:text="@string/college_delete_textView_hint_name"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/titleSize" />

            <TextView
                android:id="@+id/textViewCollegeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:ems="10"
                android:text="@string/college_delete_textView_example_name"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/textViewCollegeHintCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:ems="10"
                android:text="@string/college_delete_textView_hint_country"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/titleSize" />

            <TextView
                android:id="@+id/textViewCollegeCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:ems="10"
                android:text="@string/college_delete_textView_example_country"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/textViewCollegeHintLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:ems="10"
                android:text="@string/college_delete_textView_hint_location"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/titleSize" />

            <TextView
                android:id="@+id/textViewCollegeLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:ems="10"
                android:text="@string/college_delete_textView_example_location"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/buttonCollegeDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:background="@drawable/btn_delete"
                android:onClick="collegeDelete"
                android:text="@string/college_delete_button_delete"
                android:textColor="@color/colorButton"
                android:textSize="@dimen/buttonSize" />

            <Button
                android:id="@+id/buttonCollegeCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:background="@drawable/btn_cancel"
                android:onClick="collegeCancel"
                android:text="@string/college_delete_button_cancel"
                android:textColor="@color/colorButton"
                android:textSize="@dimen/buttonSize" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>